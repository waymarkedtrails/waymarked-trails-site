{% load url from future %}<?xml version="1.0" encoding="UTF-8" standalone="no" ?>

<gpx xmlns="http://www.topografix.com/GPX/1/1" creator="waymarkedtrails.org" version="1.1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.topografix.com/GPX/1/1
                 http://www.topografix.com/GPX/1/1/gpx.xsd">

    <metadata>
        <name>{{route.name}}</name>
        <copyright author="OpenStreetMap and Contributors">
         <license>www.opendatacommons.org/licenses/odbl/</license>
       </copyright>
        <link href="http://{{ request.META.HTTP_HOST }}{% url 'route:gpx' route.str_id|default:route.id %}">
           <text>Waymarked Trails - {{ pageinfo.maptopic }}</text>
       </link>
        <time>{% now "c" %}</time>
   </metadata>
{% for segment in geom %}
    <trk>
        <trkseg>
{% for pt in segment %}
            <trkpt lat="{{pt.1|safe}}" lon="{{pt.0|safe}}"/>{% endfor %}
        </trkseg>
    </trk>{% endfor %}
</gpx>

